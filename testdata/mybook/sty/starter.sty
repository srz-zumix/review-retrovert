    \vskip -0.6zw\relax%         % 画像の上に余白が入らないよう調整
    %\null\vspace*{-\baselineskip}%
    \ifempty{\starterminiimageframe}%
      \includegraphics[width=#2]{#1}%      % 画像を表示
    \else%
      \starterimageframe{%                 % 画像のまわりを灰色の線で囲む
        \includegraphics[width=#2]{#1}%    % 画像を表示
      }%
    \fi%
  \end{minipage}%
}
