%%% config-starter.ymlの「target:」によって、カラーにするか決める
\iffalse
\else\ifstreq{\starter@target}{pbook}    % pbook (printing book) なら
  \def\starter@colormode{mono}           %   白黒
\else\ifstreq{\starter@target}{ebook}    % ebook (electric book) なら
  \def\starter@colormode{rgb}            %   カラー (RGB)
  %\def\starter@colormode{cmyk}          %   カラー (CMYK)
\else\ifstreq{\starter@target}{tablet}   % tablet なら
  \def\starter@colormode{rgb}            %   カラー (RGB)
  %\def\starter@colormode{cmyk}          %   カラー (CMYK)
\else                                    % それら以外なら
  \def\starter@colormode{mono}           %   白黒
\fi


%%% 白黒 (白黒印刷用、0.0が黒で1.0が白）
\ifstreq{\starter@colormode}{mono}
  \definecolor{starter@deepcolor}{gray}{0.1}        % very dark gray
  \definecolor{starter@palecolor}{gray}{0.9}        % very light gray
  \definecolor{starter@chaptercolor}{gray}{0.4}     % gray
  \definecolor{starter@sectioncolor}{gray}{0.1}     % gray
  \definecolor{starter@subsectioncolor}{gray}{0.1}  % dark gray
  \definecolor{starter@notecolor}{gray}{0.0}        % black
  \definecolor{starter@captioncolor}{gray}{0.4}     % gray
  \definecolor{starter@quotecolor}{gray}{0.4}       % gray
     \colorlet{starter@linkcolor}{black}            % black
     \colorlet{starter@chaptitlepagecolor}{white}%  % white
 %\definecolor{starter@chaptitlepagecolor}{gray}{0.9}% very light gray
  %% プログラム用（フォント、背景、枠、折返し記号、改行記号、インデント記号）
  \definecolor{starter@program@fontcolor}{gray}{0.0}   % black
  \definecolor{starter@program@backcolor}{gray}{0.9}   % very light gray
  \definecolor{starter@program@bordercolor}{gray}{0.5} % gray
  \definecolor{starter@program@weakcolor}{gray}{0.5}   % gray
  \definecolor{starter@program@weakercolor}{gray}{0.75}% gray
  \definecolor{starter@program@thincolor}{gray}{0.95}  % ultra light gray
  %% ターミナル用（フォント、背景、枠、折返し記号、改行記号、インデント記号）
  \definecolor{starter@terminal@fontcolor}{gray}{1.0}  % white
  \definecolor{starter@terminal@backcolor}{gray}{0.1}  % very dark black
  \definecolor{starter@terminal@bordercolor}{gray}{0.5}% gray
  \definecolor{starter@terminal@weakcolor}{gray}{0.5}  % gray
  \definecolor{starter@terminal@weakercolor}{gray}{0.25}% dark gray
  \definecolor{starter@terminal@thincolor}{gray}{0.18} % ultra dark black
  %% 出力結果用（フォント、背景、枠、折返し記号、改行記号、インデント記号）
  \definecolor{starter@output@fontcolor}{gray}{0.0}    % black
  \definecolor{starter@output@backcolor}{gray}{1.0}    % white
  \definecolor{starter@output@bordercolor}{gray}{0.5}  % gray
  \definecolor{starter@output@weakcolor}{gray}{0.5}    % gray
  \definecolor{starter@output@weakercolor}{gray}{0.75} % gray
  \definecolor{starter@output@thincolor}{gray}{0.95}   % ultra light gray
  %
  \definecolor{starter@userinputcolor}{gray}{0.35}     % dark gray
\fi

