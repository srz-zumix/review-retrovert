%%% 説明リスト
\newenvironment{starterdesclist}{%
  %\begin{description}%
  \edef\@indent@{\starter@desclist@indent}% 説明文のインデント幅
  \addvspace{\starter@desclist@listmargin}% 上部に空きを入れる
  \addtolength{\leftskip}{\@indent@}%     % 左側の余白を設定
  %% 箇条書き（itemize, enumerate）に対応
