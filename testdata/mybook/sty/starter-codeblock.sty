      \setlength{\rightskip}{0pt}%               % フレーム内のインデントをなくす
      \clubpenalty=\z@%   % ページの一番下に1行だけ表示されるのを許す
      \widowpenalty=\z@%  % ページの一番上に1行だけ表示されるのを許す
